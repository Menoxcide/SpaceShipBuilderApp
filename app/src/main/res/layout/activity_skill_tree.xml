<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.spaceshipbuilderapp.StarryBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:padding="16dp">

        <TextView
            android:id="@+id/skillPointsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skill Points: 0"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/experienceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Experience: 0"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/bonusesText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Bonuses:\nNone"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:padding="8dp"
            android:background="@android:color/transparent"
            android:layout_marginBottom="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent">

            <LinearLayout
                android:id="@+id/skillTreeEntries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent"/>
        </ScrollView>

        <Button
            android:id="@+id/buySkillPointButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy Skill Point (20,000 XP)"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</FrameLayout>
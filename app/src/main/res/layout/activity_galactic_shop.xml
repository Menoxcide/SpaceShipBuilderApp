<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1A0B2E">

    <TextView
        android:id="@+id/shopTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Galactic Shop"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/starsCollectedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stars Collected: 0"
        android:textSize="20sp"
        android:textColor="#FF00FF"
        android:gravity="center"
        android:padding="8dp" />

    <!-- Ship Set 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/shipSet2Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cockpit_1"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ship Set 2"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/shipSet2Requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requires: Level 20, 20 Stars"
                android:textSize="16sp"
                android:textColor="#BBBBBB" />

            <Button
                android:id="@+id/unlockShipSet2Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock"
                android:enabled="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- Ship Set 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/shipSet3Image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cockpit_2"
            android:scaleType="fitCenter" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ship Set 3"
                android:textSize="20sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/shipSet3Requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requires: Level 40, 40 Stars"
                android:textSize="16sp"
                android:textColor="#BBBBBB" />

            <Button
                android:id="@+id/unlockShipSet3Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock"
                android:enabled="false" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:text="Back to Build Menu" />

</LinearLayout>